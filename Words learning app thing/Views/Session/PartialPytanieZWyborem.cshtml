@model Words_learning_app_thing.ViewModels.PytanieZWyboremViewModel

@{
    ViewBag.Title = "PartialPytanieZWyborem";
}


<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.SlowoDoPrzetlumaczenia, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.SlowoDoPrzetlumaczenia, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SlowoDoPrzetlumaczenia, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Na język:</label>
        <div class="col-md-10">
            @Html.DisplayFor(model => model.JezykUczony.Nazwa, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.OdpowiedzUzytkownika, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @foreach (var odpowiedz in Model.Odpowiedzi)
            {
                @Html.RadioButtonFor(model => model.OdpowiedzUzytkownika, odpowiedz.Zawartosc)@odpowiedz.Zawartosc
                <br />
            }

            @Html.ValidationMessageFor(model => model.OdpowiedzUzytkownika, "", new { @class = "text-danger" })
        </div>
    </div>    
</div>