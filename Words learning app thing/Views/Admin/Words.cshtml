@model IEnumerable<Words_learning_app_thing.Models.Slowo>

@{
    ViewBag.Title = "Words";
}

<h2>Words</h2>

<p>
    @Html.ActionLink("Create New", "CreateWord")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Zawartosc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Jezyk)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Zawartosc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Jezyk.Nazwa)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditWord", new { id = item.Id }) |
            @Html.ActionLink("Details", "DetailsWord", new { id = item.Id }) |
            @Html.ActionLink("Delete", "DeleteWord", new { id = item.Id })
        </td>
    </tr>
}

</table>
